  <style>
      body {
  font-family: 'Arial', sans-serif;
  margin: 0;
  padding: 0;
  background-color: #f8f8f8;
}
footer {
    background-color: #28a745;
    color: #fff;
    padding: 20px;
    text-align: center;
}

h5:hover{
        background-color: #c5c5c5;
        color: black;
       
        
      }
h5{
     padding-right: 1rem;
     padding-left: 1rem;
     padding-top: 0.5rem;
}

main {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  padding: 20px;
}

.scheme-card {
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  margin: 20px;
  padding: 20px;
  width: 300px;
  text-align: center;
}

.scheme-card h2 {
  color: #333;
  font-size: 1.8rem;
  margin-bottom: 10px;
}

.scheme-card p.description {
  color: #666;
  font-size: 1rem;
  margin-bottom: 20px;
}

.learn-more-btn {
  background-color: #4CAF50;
  color: #fff;
  border: none;
  padding: 10px 20px;
  border-radius: 5px;
  cursor: pointer;
  font-size: 1rem;
}

  </style>
