<script>
        document.getElementById('phoneNumber').addEventListener('input', function () {
            const phoneNumberInput = this;
            const errorMessage = document.getElementById('error-message');

            if (phoneNumberInput.validity.patternMismatch) {
                phoneNumberInput.setCustomValidity('Please enter a valid 10-digit phone number');
                errorMessage.textContent = 'Invalid phone number';
            } else {
                phoneNumberInput.setCustomValidity('');
                errorMessage.textContent = '';
            }
        });

		document.getElementById('pincode').addEventListener('input', function () {
            const phoneNumberInput = this;
            const errorMessage = document.getElementById('error-pincode');

            if (phoneNumberInput.validity.patternMismatch) {
                phoneNumberInput.setCustomValidity('Please enter a valid 7-digit phone number');
                errorMessage.textContent = 'Invalid pincode number';
            } else {
                phoneNumberInput.setCustomValidity('');
                errorMessage.textContent = '';
            }
        });

		document.getElementById('userName').addEventListener('input', function () {
            const userNameInput = this;
            const errorMessage = document.getElementById('error-name');

            if (userNameInput.validity.patternMismatch) {
                userNameInput.setCustomValidity('Please enter at least 3 characters, using only letters ');
                errorMessage.textContent = 'Invalid Name Format Please use only letters ';
            } else {
                userNameInput.setCustomValidity('');
                errorMessage.textContent = '';
            }
        });
//==========================================================================================================================
		const passwordInput = document.getElementById('cpass');
		const passwordError = document.getElementById('error-password');
		passwordInput.addEventListener('input', () => {
        const password = passwordInput.value;
        const isValid = /(?=.*[!@#$%^&*()_+{}\[\]:;<>,.?~\\-])(?=.*[0-9])(?=.*[A-Z]).{8,}/.test(password);
       passwordError.textContent = isValid ? '' : 'Password must contain at least one special character, one number, and one uppercase letter. Minimum length is 8 characters.';
       });

	   //Password Validation for checking appropriateness of the password

//==========================================================================================================================

		document.getElementById('age').addEventListener('input', function(){
			const userAge = this;
			const errorMessage = document.getElementById('error-age');
			if(userAge.validity.rangeUnderflow || userAge.validity.rangeOverflow){
				userAge.setCustomValidity('Please enter a valid age between 18 and 100');
				errorMessage.textContent = 'Please enter a valid age between 18 and 100'
			}
			else {
				userAge.setCustomValidity('');
				errorMessage.textContent= '';
			}
		})

		document.getElementById('income').addEventListener('input', function(){
			const userIncome = this;
			const errorMessage = document.getElementById('error-income');
			if(userIncome.validity.rangeUnderflow || userIncome.validity.rangeOverflow){
				userIncome.setCustomValidity('Please enter a valid positive income');
				errorMessage.textContent = 'Please enter a valid positive income';
			}
			else {
				userIncome.setCustomValidity('');
				errorMessage.textContent= '';
			}
		})
        // Validation for Land Size
		document.getElementById('land').addEventListener('input', function(){
			const userIncome = this;
			const errorMessage = document.getElementById('error-land');
			if(userIncome.validity.rangeUnderflow || userIncome.validity.rangeOverflow){
				userIncome.setCustomValidity('Please enter a valid positive field size');
				errorMessage.textContent = 'Please enter a valid positive field size';
			}
			else {
				userIncome.setCustomValidity('');
				errorMessage.textContent= '';
			}
		})
   

  let pass = document.getElementById('cpass');
  function check(elem){
    if(elem.value.length > 0 ){
      if(elem.value != pass.value){
        document.getElementById('err').innerText ='Password do not match';
      }
      else {
        document.getElementById('err').innerText =''
      }
    }
  }
  function showSelectState(){

  }
  function showSelectList() {
            var selectedCategory = document.getElementById('category').value;

            document.getElementById('grainSelect').style.display = 'none';
            document.getElementById('pulseSelect').style.display = 'none';
            document.getElementById('vegetableSelect').style.display = 'none';
			document.getElementById('fruitsSelect').style.display ='none';
			document.getElementById('cashcropsSelect').style.display ='none'

            // Show the select list based on the selected category
            if (selectedCategory === 'grains') {
                document.getElementById('grainSelect').style.display = 'block';
            } else if (selectedCategory === 'pulses') {
                document.getElementById('pulseSelect').style.display = 'block';
            } else if (selectedCategory === 'vegetables') {
                document.getElementById('vegetableSelect').style.display = 'block';
            } else if(selectedCategory === 'fruits'){
				document.getElementById('fruitsSelect').style.display = 'block';
			} else if(selectedCategory === 'cashcrops'){
				document.getElementById('cashcropsSelect').style.display = 'block';
			}
        }
  
</script>
