}
h5:hover{
        background-color: #c5c5c5;
        color: black;
       
        
      }
h5{
     padding-right: 1rem;
     padding-left: 1rem;
     padding-top: 0.5rem;
}


@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

    </style>
</head>
<body>
     {{>navbar}}
    <br><br>
  <div class="top">
    <h1>Get Your Personalized Schemes here</h1>
    <p>Explore the latest agricultural schemes for your farm.</p>
  </div>
  <main>
    <form id="userForm">
      <label for="farmSize">Farm Size (in acres):</label>
      <input type="number" id="farmSize" name="farmSize" required>

      <label for="cropType">Main Crop Type:</label>
      <input type="text" id="cropType" name="cropType" required>

      <label for="location">Location:</label>
      <input type="text" id="location" name="location" required>

      <label for="irrigationMethod">Irrigation Method:</label>
      <select id="irrigationMethod" name="irrigationMethod" required>
        <option value="drip">Drip Irrigation</option>
        <option value="sprinkler">Sprinkler Irrigation</option>
        <option value="flood">Flood Irrigation</option>
      </select>

      <button type="button" id="recommendBtn" onclick="recommendSchemes()">Recommend Schemes</button>
    </form>

    <div id="recommendations" style="display: none;">
      <h2 style="font-weight: bolder;">Recommended Schemes:</h2>
      <ul id="schemeList"></ul>
    </div>
  </main>

  <footer>
        <p>&copy; 2023 FarmAssist. All rights reserved.</p>
    </footer>

  <script >
    function recommendSchemes() {
  const farmSize = parseFloat(document.getElementById('farmSize').value);
  const cropType = document.getElementById('cropType').value;

  let recommendedSchemes = [];

  if (farmSize > 10 && cropType.toLowerCase() === 'rice') {
    recommendedSchemes.push('PM-KISAN Yojana', 'Smart Irrigation Grant');
  } else if (farmSize <= 10 && cropType.toLowerCase() === 'corn') {
    recommendedSchemes.push('Green Crop Initiative', 'Organic Farming Subsidy');
  } else {
    recommendedSchemes.push('PM-KISAN Yojana');
  }

  displayRecommendations(recommendedSchemes);
}

function displayRecommendations(schemes) {
  const schemeList = document.getElementById('schemeList');
  const recommendationsDiv = document.getElementById('recommendations');

  schemeList.innerHTML = '';

  schemes.forEach(scheme => {
    const listItem = document.createElement('li');
    listItem.textContent = scheme;
    schemeList.appendChild(listItem);
  });

  recommendationsDiv.style.display = 'block';
}

  </script>
  

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
