 <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        // JavaScript function to recommend schemes
        async function recommendSchemes() {
            // Collect form data
            const selectCrop= document.getElementById('cropName');
            const selectedIndexCrop = selectCrop.selectedIndex;
            const selectValueCrop = selectCrop.options[selectedIndexCrop].value;

            const selectwaterAvail= document.getElementById('waterAvailability');
            const selectedIndexWater = selectwaterAvail.selectedIndex;
            const selectValueWater = selectwaterAvail.options[selectedIndexWater].value;

            const selectDistrict= document.getElementById('district');
            const selectedIndexDistrict = selectDistrict.selectedIndex;
            const selectValueDistrict = selectDistrict.options[selectedIndexDistrict].value;
            
            
            const formData = {
                Farm_Size: document.getElementById('farmSize').value,
                Crop_Names: selectValueCrop,
                Water_Availability: selectValueWater,
                Annual_Income_of_Farmer: document.getElementById('annualIncome').value,
                District: selectValueDistrict,
                
            };

            try {
                // Make a POST request to the backend API
                 const timestamp = new Date().getTime();
        
        // Make a POST request to the backend API with the timestamp
                const response = await axios.post(`https://ml-model1-three.vercel.app/getschemes?timestamp=${timestamp}`, formData);

                // Handle the response, update UI, etc.
                console.log(response.data);
                displayRecommendations(response.data);
            } catch (error) {
                console.error('Error:', error);
            }
        }

        // Modify the displayRecommendations function
  function displayRecommendations(recommendedSchemesObj) {
    console.log('Received recommendations:', recommendedSchemesObj);
      const recommendationsDiv = document.getElementById('recommendedSchemes');
      const recommendedSchemes = recommendedSchemesObj.recommendedSchemes;
      // Clear previous content
      recommendationsDiv.innerHTML = '';

      

     if (!Array.isArray(recommendedSchemes)) {
            console.error('Invalid data format. Expected an array.', recommendedSchemesObj);
            return;
        }

        if (recommendedSchemes.length === 0) {
            recommendationsDiv.innerHTML = '<br><h3 style="font-weight:bolder; margin:1rem 1rem;">No recommendations available.</h3><br>';
        } else {
            const listItems = recommendedSchemes.map(scheme => `<li><h6 style="font-size:1.2rem;"> ${scheme[2]}<br><br><a href="${scheme[3]}" style="background-color:green;color:white;text-decoration:none; padding:5px 5px;margin:1rem 1rem;border-radius:8px">Click Here</a></h6></li> `).join('');
            recommendationsDiv.innerHTML = `<br><h2 style="color:black;margin:1rem 1rem;font-size:2rem">Recommended Schemes</h2><ul>${listItems}</ul><br>`;
        }
  }



    </script>
  

